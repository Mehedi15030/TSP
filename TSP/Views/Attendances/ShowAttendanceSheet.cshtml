@model IEnumerable<TSP.Models.Attendance>

@{
    ViewData["Title"] = "Create";
    int i = 1;
}

<h3 class="alert alert-primary"> Attendance Sheet</h3>

<table class="table table-stripped">
        <thead>
            <tr>
                <th>
                    SL#
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPresent)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i.</td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Student.StudentName)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPresent)
                </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
